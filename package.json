    "babelify": "^7.2.0",
    "uglify-js": "^2.6.1",
    "babel-loader": "^6.0.1",
    "babel-runtime": "^6.9.1",
    "babel-plugin-transform-runtime": "^6.4.3",
    "babel-preset-stage-0": "^6.3.13",
    "babel-preset-es2015": "^6.9.0",
    "node-libs-browser": "^0.5.3",
    "budo": "^8.3.0"
  }
